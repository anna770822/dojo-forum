<div>
  <%= render partial: "shared/profile"%>
</div>
<div>
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to "My Post", user_path(@user), class: "nav-link"%>
    </li>
    <li class="nav-item">
      <%= link_to "My Comment", comments_user_path(@user), class: "nav-link"%>
    </li>
    <li class="nav-item">
      <%= link_to "My Collect", collects_user_path(@user), class: "nav-link active"%>
    </li>
    <li class="nav-item">
      <%= link_to "My Draft", drafts_user_path(@user), class: "nav-link"%>
    </li>
    <li class="nav-item">
      <%= link_to "My Friend", friends_user_path(@user), class: "nav-link"%>
    </li>
  </ul>
</div>
<table class="table table-hover">
  <tbody>
    <% @collections.each do |collection|%>
      <tr>
        <td class="text-center"><%= link_to collection.post.title, post_path(collection.post)%></td>
        <% if collection.user == current_user%>
          <% if collection.post.is_collected?(current_user)%>
            <td class="text-center"><%= link_to "Uncollect", post_uncollect_path(collection.post.id), class: "btn btn-outline-secondary float-right margin-10", remote: true, method: :post, id: "uncollect-#{collection.post.id}"%></td>
          <%else%>
            <td class="text-center"><%= link_to "Collect", post_collect_path(collection.post.id), class: "btn btn-outline-secondary float-right margin-10", remote: true, method: :post, id: "collect-#{collection.post.id}"%></td>
          <%end%>
  
        <%end%>
      </tr>
    <%end%>
  </tbody>
</table>


