<ul class="nav nav-tabs margin-top-20">
  <li class="nav-item">
    <%= link_to "Category List", admin_categories_path, class: "nav-link "%>
  </li>
  <li class="nav-item">
    <%= link_to "User List" , admin_users_path, class: "nav-link active" %>
  </li>
</ul>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= form_for [:admin, user], url: admin_user_path(id: user.id), method: :put do |f| %>
            <%= f.select :role, ["Admin","Normal"]%>
            <%= f.submit class: "btn btn-primary"%>
          <%end%>
        </td>
      </tr>
    <% end%>
  </tbody>
</table>