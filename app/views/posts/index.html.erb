<%= link_to "New Post" , new_post_path %>
<table class="table">
  <thead>
    <tr>
      <th>Replies Count</th>
      <th>Title</th>
      <th>Last replies at</th>
      <th>Viewed count</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.comments.count%></td>
        <td><%= link_to "#{post.title}", post_path(post) %></td>
        <td><% if post.comments.count == 0 %>
            <%= post.updated_at %>
          <%else%>
            <%= post.comments.last.updated_at%>
          <%end%>
        </td>
        <td>#</td>
      </tr>
    <%end%>
  </tbody>
</table>
<%= paginate @posts %>