<%= form_for @post do |f| %>

  <%= f.text_field :title %>
  <%= f.text_area :content%>

  <%= f.radio_button :authority, "All"%> All <br/>
  <%= f.radio_button :authority, "Friend"%> Friend <br/>
  <%= f.radio_button :authority, "Myself"%> Myself <br/>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name%>

  <%= f.label :image, "Photo" %>
  <%= image_tag @post.image, width: '300px' if @post.image? %>
  <%= f.file_field :image %>

  <%= f.submit "Publish" %>
  <%= f.submit "Save as Draft"%>
<%end%>